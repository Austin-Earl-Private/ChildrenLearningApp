<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="startQuestionColorGame"
    tools:context=".GameMenu">

    <!--<div>Icons made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:onClick="startNumberGame"
                app:srcCompat="@drawable/numbers_button" />

            <ImageButton
                android:id="@+id/btnColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:onClick="startColorGame"
                app:srcCompat="@drawable/colors_button" />

            <ImageButton
                android:id="@+id/btnLetters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:onClick="startLetterGame"
                app:srcCompat="@drawable/abc_button" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:onClick="startAnimalGame"
                app:srcCompat="@drawable/animals_button" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:onClick="startShapeGame"
                app:srcCompat="@drawable/shapes_button" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="96dp"
                android:layout_height="109dp"
                android:layout_gravity="fill"
                android:layout_marginStart="158dp"
                android:background="@null"
                android:onClick="GoToExtraGames"
                app:srcCompat="@drawable/question_game" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_gravity="center|fill"
                android:layout_marginStart="158dp"
                android:background="@null"
                android:onClick="youtube"
                app:srcCompat="@drawable/question_game" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>